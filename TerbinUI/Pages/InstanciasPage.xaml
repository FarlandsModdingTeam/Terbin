<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="TerbinUI.Pages.InstanciasPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:TerbinUI.Pages"
    mc:Ignorable="d">

    <Grid Padding="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="280"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Left: title + grid -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Instancias" Style="{StaticResource TitleTextBlockStyle}"/>

            <GridView Grid.Row="1" x:Name="InstancesGrid" ItemsSource="{x:Bind FilteredItems, Mode=OneWay}" IsItemClickEnabled="True" ItemClick="OnItemClick" SelectionMode="None" Padding="16">
                <GridView.ItemContainerStyle>
                    <Style TargetType="GridViewItem">
                        <Setter Property="Margin" Value="16"/>
                    </Style>
                </GridView.ItemContainerStyle>
                <GridView.ItemTemplate>
                    <DataTemplate>
                        <Grid Width="120">
                            <Border x:Name="Card" Height="170" Background="{ThemeResource AccentFillColorDefaultBrush}" CornerRadius="8" HorizontalAlignment="Stretch"
                                    PointerEntered="OnItemPointerEntered" PointerExited="OnItemPointerExited">
                                <Grid>
                                    <!-- Nombre centrado -->
                                    <TextBlock Text="{Binding Name}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" FontWeight="SemiBold" TextWrapping="WrapWholeWords" TextAlignment="Center" />
                                    <!-- Overlay inferior con botón Ejecutar (animado al hover) -->
                                    <Grid x:Name="BottomOverlay" VerticalAlignment="Bottom" Background="#66000000" Opacity="0" IsHitTestVisible="False" Padding="8">
                                        <Button x:Name="ExecuteButton" Content="Ejecutar" HorizontalAlignment="Stretch" Click="OnExecuteClick"/>
                                    </Grid>
                                </Grid>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </Grid>

        <!-- Right: vertical menu centered -->
        <Border Grid.Column="1" Padding="12" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8">
            <StackPanel VerticalAlignment="Center" Spacing="12">
                <TextBlock Text="Buscar" FontWeight="SemiBold"/>
                <TextBox x:Name="SearchBox" PlaceholderText="Buscar instancias" TextChanged="OnSearchTextChanged"/>
                <Border Height="1" Background="{ThemeResource DividerStrokeColorDefault}" Opacity="0.6"/>
                <Button Content="Nueva instalación" Click="OnAddInstanceClick"/>
            </StackPanel>
        </Border>

        <!-- Busy overlay covering all -->
        <Grid x:Name="BusyOverlay" Grid.ColumnSpan="2" Background="#66000000" Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="12" Width="420">
                <TextBlock Text="Creando instalación..." HorizontalAlignment="Center"/>
                <ProgressBar x:Name="BusyProgress" Minimum="0" Maximum="100" Value="0"/>
                <TextBlock x:Name="BusyProgressText" Text="0 %" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
