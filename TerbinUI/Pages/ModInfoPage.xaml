<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="TerbinUI.Pages.ModInfoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <ScrollViewer>
            <StackPanel Padding="16" Spacing="12">
                <TextBlock x:Name="TxtTitle" Style="{StaticResource TitleTextBlockStyle}" Text="Mod" />

                <StackPanel Spacing="4">
                    <TextBlock Text="GUID" FontWeight="SemiBold"/>
                    <TextBlock x:Name="TxtGuid"/>
                </StackPanel>

                <StackPanel Spacing="4">
                    <TextBlock Text="&#x00DA;ltima versi&#x00F3;n" FontWeight="SemiBold"/>
                    <TextBlock x:Name="TxtLatest"/>
                </StackPanel>

                <StackPanel Spacing="4">
                    <TextBlock Text="URL del repositorio" FontWeight="SemiBold"/>
                    <TextBlock x:Name="TxtUrl" TextWrapping="Wrap"/>
                </StackPanel>

                <StackPanel Spacing="4">
                    <TextBlock Text="Dependencias" FontWeight="SemiBold"/>
                    <ItemsControl x:Name="DepsList"/>
                    <TextBlock x:Name="TxtNoDeps" Text="(Sin dependencias)" Opacity="0.6" Visibility="Collapsed"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Floating back-to-list button (bottom-left) -->
        <Button HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="16" Click="OnGoBackToListClick">
            <SymbolIcon Symbol="Back"/>
        </Button>
    </Grid>
</Page>
